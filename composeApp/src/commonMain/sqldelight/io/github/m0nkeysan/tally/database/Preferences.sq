CREATE TABLE IF NOT EXISTS userPreferencesEntity (
  key TEXT NOT NULL PRIMARY KEY,
  prefValue TEXT NOT NULL
);

selectPreference:
SELECT prefValue FROM userPreferencesEntity WHERE key = ?;

insertPreference:
INSERT OR REPLACE INTO userPreferencesEntity(key, prefValue)
VALUES (?, ?);

selectAllPreferences:
SELECT * FROM userPreferencesEntity;

deletePreference:
DELETE FROM userPreferencesEntity WHERE key = ?;

deleteAllPreferences:
DELETE FROM userPreferencesEntity;
